extends ../layout

block content
  h2.display-data Networkline Detail
            
  table.table.table-bordered
    tr
      th Property
      th Value
        tr
          td Itticket
          td= display(networkLine.itTicket)
        tr
          td Fcticket
          td= display(networkLine.fcTicket)
        tr
          td Nbrlines
          td= display(networkLine.nbrLines)
        tr
          td Location
          td= display(networkLine.location)
        tr
          td Requester
          td= display(networkLine.requester)
        tr
          td Description
          td= display(networkLine.description)
        tr
          td Notes
          td= display(networkLine.notes)
        tr
          td Completeddate
          td= display(networkLine.completedDate)


  .form-actions
    a.btn.btn-warning(href="/networkLines") Back
    | &nbsp;
    a.btn.btn-primary(href="/networkLines/" + networkLine._id + "/edit") Edit
    | &nbsp;
    a.btn.btn-danger(href="/networkLines/" + networkLine._id + "/delete") Delete