extends ../layout

block content
  h2.display-data Serverroom Detail
            
  table.table.table-bordered
    tr
      th Property
      th Value
        tr
          td Servername
          td= display(Serverroom.ServerName)
        tr
          td Location
          td= display(Serverroom.Location)
        tr
          td Port
          td= display(Serverroom.Port)
        tr
          td Switchport
          td= display(Serverroom.SwitchPort)
        tr
          td Vlan
          td= display(Serverroom.vlan)
        tr
          td Ipaddress
          td= display(Serverroom.IPAddress)
        tr
          td Switch
          td= display(Serverroom.Switch)
        tr
          td Swport
          td= display(Serverroom.SwPort)
        tr
          td Os
          td= display(Serverroom.OS)
        tr
          td Notes
          td= display(Serverroom.Notes)


  .form-actions
    a.btn.btn-warning(href="/Serverrooms") Back
    | &nbsp;
    a.btn.btn-primary(href="/Serverrooms/" + Serverroom._id + "/edit") Edit
    | &nbsp;
    a.btn.btn-danger(href="/Serverrooms/" + Serverroom._id + "/delete") Delete