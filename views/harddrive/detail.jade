extends ../layout

block content
  h2.display-data Harddrive Detail
            
  table.table.table-bordered
    tr
      th Property
      th Value
        tr
          td Server
          td= display(harddrive.Server)
        tr
          td Odmodel
          td= display(harddrive.ODModel)
        tr
          td Odserial
          td= display(harddrive.ODSerial)
        tr
          td Odpartnbr
          td= display(harddrive.ODPartNbr)
        tr
          td Ndmodel
          td= display(harddrive.NDModel)
        tr
          td Ndserial
          td= display(harddrive.NDSerial)
        tr
          td Ndpartnbr
          td= display(harddrive.NDPartNbr)
        tr
          td Trndate
          td= display(harddrive.trnDate)
        tr
          td Dlocation
          td= display(harddrive.DLocation)
        tr
          td Note
          td= display(harddrive.Note)


  .form-actions
    a.btn.btn-warning(href="/harddrives") Back
    | &nbsp;
    a.btn.btn-primary(href="/harddrives/" + harddrive._id + "/edit") Edit
    | &nbsp;
    a.btn.btn-danger(href="/harddrives/" + harddrive._id + "/delete") Delete