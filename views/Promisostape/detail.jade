extends ../layout

block content
  h2.display-data Promisostape Detail
            
  table.table.table-bordered
    tr
      th Property
      th Value
        tr
          td Backupweek
          td= display(Promisostape.backupWeek)
        tr
          td Casseteslot
          td= display(Promisostape.casseteSlot)
        tr
          td Rotation
          td= display(Promisostape.rotation)
        tr
          td Label
          td= display(Promisostape.label)


  .form-actions
    a.btn.btn-warning(href="/Promisostapes") Back
    | &nbsp;
    a.btn.btn-primary(href="/Promisostapes/" + Promisostape._id + "/edit") Edit
    | &nbsp;
    a.btn.btn-danger(href="/Promisostapes/" + Promisostape._id + "/delete") Delete